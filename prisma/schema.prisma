// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Movie {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String?  @unique
  description  String?
  age_rating   Int? // Assuming age rating is an integer
  poster_url   String?
  release_date String?
  ticket_price Int?
  seats        Seat[]
  Ticket       Ticket[]
}

model Seat {
  id      String    @id @default(auto()) @map("_id") @db.ObjectId
  movieId String?   @db.ObjectId
  movie   Movie?    @relation(fields: [movieId], references: [id])
  date    DateTime?
  number  Int?
  booked  Boolean?  @default(false)
}

model Ticket {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  totalPrice Int?
  createdAt  DateTime @default(now())
  seats      Int[]

  movie   Movie?  @relation(fields: [movieId], references: [id])
  movieId String? @db.ObjectId
}

model Balance {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  amount Int
}
